<h3>Issue Tracker Reporting System</h3>

<div class="row">
    <div class="col-md-4">
        <form role="form">
            <div class="form-group">
                <label for="report_picker">Select report:</label>
                {REPORTPICKER}
            </div>
            <div class="form-group">
                <label for="timespan_start_date">Date of visit:</label>
                {START_DATE}
                <label for="timespan_end_date">to </label>
                {END_DATE}
            </div>
        </form>

    </div>
</div>

<hr />

<div id="report-area" style="margin:15px;">
        Once a report is generated, it will appear here.
</div>
